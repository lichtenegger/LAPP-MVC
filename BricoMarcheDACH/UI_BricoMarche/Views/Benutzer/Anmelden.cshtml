@model UI_BricoMarche.Models.BenutzerModelle.AnmeldenModell

@using (Html.BeginForm("Anmelden", "Benutzer"))
{
    @Html.AntiForgeryToken()
    <div class="login">
        <div class="form-group">
            @Html.ActionLink("Registrieren", "Registrieren", "Benutzer", null, new { @class = "btn btn-default" })
        </div>
        <div class="form-group">
            <input type="submit" value="Anmelden" class="btn btn-primary"/>
        </div>
    </div>

    <div class="login">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.EditorFor(model => model.Benutzername, new { htmlAttributes = new { @class = "form-control", @Placeholder = "E-Mail-Adresse" }})
            @Html.ValidationMessageFor(model => model.Benutzername, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Passwort, new { htmlAttributes = new { @class = "form-control", @Placeholder = "Passwort" }})
            @Html.ValidationMessageFor(model => model.Passwort, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="hidden" value="@Request.Url" name="returnUrl"/>
}
